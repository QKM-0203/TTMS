<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qkm.TTMS.mapper.AreaCinemasMapper">

    <resultMap id="BaseResultMap" type="com.qkm.TTMS.entity.AreaCinemas">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="areaName" column="area_name" jdbcType="VARCHAR"/>
            <result property="cinemaName" column="cinema_name" jdbcType="VARCHAR"/>
            <result property="cinemaPicture" column="cinema_picture" jdbcType="VARCHAR"/>
            <result property="cinemaAddress" column="cinema_address" jdbcType="VARCHAR"/>
            <result property="cinemaMoney" column="cinema_money" jdbcType="BIGINT"/>
            <result property="lawMoney" column="law_money" jdbcType="FLOAT" />
            <result property="cinemaNumber" column="cinema_number" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,area_name,cinema_name,
        cinema_picture,cinema_address,cinema_money
    </sql>
    <update id="addMoney">
        update area_cinemas set cinema_money = cinema_money + #{money} where id = #{cinemaId}
    </update>

    <update id="downMoney">
        update area_cinemas set cinema_money = cinema_money - #{money} where id = #{cinemaId}
    </update>

    <select id="getCinemaMoviesByCinemaId" resultMap="BaseResultMap">
        select *,cm.movie_lowMoney lm  from area_cinemas ac join cinema_movies cm on ac.id = cm.cinema_id where ac.area_name = #{areaName} and cm.movie_id = #{movieId}
    </select>
    <select id="getAllById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from area_cinemas
        where
        id = #{id,jdbcType=NUMERIC}
    </select>
    <select id="getListID" resultType="java.lang.Long">
        select id from area_cinemas
    </select>

    <select id="getAll" resultType="com.qkm.TTMS.entity.AreaCinemas">
        select * from area_cinemas
    </select>

    <select id="deleteById"  resultType="int">
        delete  from area_cinemas where id = #{cinemaId}
    </select>
    <select id="getAllByAreaName" resultType="com.qkm.TTMS.entity.AreaCinemas">
        select
        <include refid="Base_Column_List"/>
        from area_cinemas
        where
        cinema_name like CONCAT('%',#{cinemaName},'%') or CONCAT('%',#{cinemaName}) or CONCAT(#{cinemaName},'%')
    </select>
</mapper>
