<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qkm.TTMS.mapper.AreaCinemasMapper">

    <resultMap id="BaseResultMap" type="com.qkm.TTMS.entity.AreaCinemas">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="areaName" column="area_name" jdbcType="VARCHAR"/>
            <result property="cinemaName" column="cinema_name" jdbcType="VARCHAR"/>
            <result property="cinemaPicture" column="cinema_picture" jdbcType="VARCHAR"/>
            <result property="cinemaAddress" column="cinema_address" jdbcType="VARCHAR"/>
            <result property="cinemaMoney" column="cinema_money" jdbcType="BIGINT"/>
            <result property="lawMoney" column="lm" jdbcType="FLOAT" />
    </resultMap>

    <sql id="Base_Column_List">
        id,area_name,cinema_name,
        cinema_picture,cinema_address,cinema_money
    </sql>

    <select id="getCinemaMoviesByCinemaId" resultMap="BaseResultMap">
        select *,cm.movie_lowMoney lm  from area_cinemas ac join cinema_movies cm on ac.id = cm.cinema_id where ac.area_name = #{areaName} and cm.movie_id = #{movieId}
    </select>
</mapper>
